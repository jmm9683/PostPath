{{ define "addlinkHTMX" }}
        <p hx-get="/page{{range .Path}}/{{.}}{{end}}/{{.LinkID}}" 
           hx-target="#home-content" 
           hx-swap="outerHTML" 
           hx-push-url="true"
           >{{.Text}}</p>
        <small><span id="profile-{{.UserID}}" hx-get="/profile/{{.UserID}}" hx-target="#home-content" hx-swap="outerHTML" hx-push-url="true">@{{.User}}</span> • {{.CreatedAtStr}} {{if and .Source (gt .Source 0)}}<span id="source-{{.Source}}-{{.TextID}}" hx-get="/page/{{.SourcePath}}" hx-target="#main-content" hx-swap="innerHTML" hx-push-url="true">• {{.SourceTitle}}</span>{{end}}</small>
{{ end }}
